public class QuestoesCalculos {
    //Número 1
    public static int letra_a(int inteiro) {
        return inteiro * 2;
    }

    public static int letra_b(int valorUm, int valorDois) {
        return Math.max(valorUm, valorDois);
    }

    public static float letra_c(float valorUm, float valorDois, float valorTres) {
        float mediaValores;
        mediaValores = (valorUm + valorDois + valorTres) / 3;
        return mediaValores;
    }

    public static long letra_d(int inteiro) {
        long fatorialInteiro = 1;
        for (int i = 1; i <= inteiro; i++) {
            fatorialInteiro = fatorialInteiro * i;
        }
        return fatorialInteiro;
    }

    public static long letra_e(int inteiro) {
        long somatorioInteiro = 0;
        for (int i = 1; i <= inteiro; i++) {
            somatorioInteiro = somatorioInteiro + i;
        }
        return somatorioInteiro;
    }

    //Número 2
    public static int soma(int a, int b) {
        return a + b;
    }

    public static int subtracao(int a, int b) {
        return a - b;
    }

    public static int multiplicacao(int a, int b) {
        int resultado = 0;
        if (a >= 0 & b >= 0) {
            for (int i = 0; i < b; i++) {
                resultado = resultado + a;
            }
        } else if (a < 0 & b < 0) {
            for (int i = 0; i > b; i--) {
                resultado = resultado - a;
            }
        } else if (a >= 0 & b < 0) {
            for (int i = 0; i > b; b++) {
                resultado = resultado - a;
            }
        } else {
            for (int i = 0; i < b; i++) {
                resultado = resultado + a;
            }
        }
        return resultado;
    }
}
